{
  "manifest_version": 3,
  "name": "雪花飘落动画",
  "version": "1.0",
  "description": "在所有网页上添加美丽的雪花飘落动画效果",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["snow.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html"
  }
}
